$headerTextColor = #fdfcfc
$headerHighlightColor = #555
$textColor = #666
$highlightTextColor = #333
$headerHeight = 40px

.w-header-container
  color $headerTextColor
  padding 0 12px 0 18px

  .btn-group
    margin-left 10px
    margin-top 5px

  .btn
    min-width 40px
    height 30px

.header-left
  float left
  i
    line-height $headerHeight
    color $headerTextColor
    cursor pointer
    border-radius 3px
    padding 5px

    &:hover
      background-color $headerHighlightColor

.header-right
  float right
  a
    line-height $headerHeight
    color $headerTextColor
    cursor pointer
    border-radius 3px
    padding 5px

    &:hover
      background-color $headerHighlightColor

.header-center
  position absolute
  width 33.33%
  margin-left 33.33%
  margin-top 5px

  button.w-search-filter-apply
    border-top-right-radius 3px !important
    border-bottom-right-radius 3px !important

  input.w-search-filter.input-sm
    width 100%
    color $textColor
    border 1px solid #ddd
    border-radius 0

    &:focus
      box-shadow none
      outline none
